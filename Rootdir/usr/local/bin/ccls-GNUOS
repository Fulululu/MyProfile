#!/bin/sh
# This is a wrapper for ccls
exec $HOME/bin/ccls $@ --log-file=/tmp/ccls.out --init='{"cache": {"directory": "/tmp/ccls-cache"},
							 "clang": {"extraArgs": ["-std=c++17"], "resourceDir": "/usr/lib/llvm-8/lib/clang/8.0.0"},
							 "client": {"snippetSupport": false},
							 "index": {"comments": 1}}'
